<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_frame"
    tools:context=".PaymentMethod">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbToolbar"
            android:layout_width="match_parent"
            android:layout_height="96.71dp"
            app:navigationIcon="@drawable/back_white"
            app:buttonGravity="center_vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="138dp"
                android:layout_height="30dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:text="@string/payment_Text"
                    android:textAppearance="@style/nu_exb_16"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

            <androidx.cardview.widget.CardView
                android:layout_width="344dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="17dp"
                android:background="@color/white"
                android:elevation="4dp"
                app:cardCornerRadius="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="36dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="1dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="33dp"
                        android:background="@drawable/rectangle_red"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="31dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="15dp"
                        android:text="@string/total_payment_Text"
                        android:textAppearance="@style/lato_12"
                        android:textColor="#585858"
                        android:lineSpacingExtra="10sp"
                        android:gravity="top"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/tvTotalCost"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="31dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="39dp"
                        android:text="@string/total_cost"
                        android:textColor="#FF371C"
                        android:textAppearance="@style/nu_exb_22"
                        android:gravity="top"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <View
                        android:layout_width="344dp"
                        android:layout_height="1dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="42dp"
                        android:background="@drawable/border_line"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <TextView
                        android:layout_width="288dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="31dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="85dp"
                        android:text="@string/select_payment_Text"
                        android:textAppearance="@style/lato_12"
                        android:textColor="#808080"
                        android:lineSpacingExtra="10sp"
                        android:gravity="top"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="114dp"
                android:layout_height="19dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="166dp"
                android:text="@string/payment_method_Text"
                android:textAppearance="@style/nu_exb_14"
                android:textColor="#3D3D3D"
                android:gravity="top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        
        <androidx.cardview.widget.CardView
            android:layout_width="343dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="196dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="31dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/credit_card_Text"
                    android:textAppearance="@style/lato_12"
                    android:textColor="#808080"
                    android:lineSpacingExtra="10sp"
                    android:gravity="top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/selectCC"
                    android:onClick="SELECTCC"
                    android:layout_width="50dp"
                    android:layout_height="14dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="261dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="9dp"
                    android:text="@string/btnSelect"
                    android:textAppearance="@style/nu_exb_12"
                    android:textColor="#FF0000"
                    android:lineSpacingExtra="8sp"
                    android:gravity="top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:layout_width="6dp"
                    android:layout_height="9dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="315dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="13.5dp"
                    android:rotation="180"
                    android:background="@drawable/right_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:layout_width="343dp"
                    android:layout_height="1dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="39dp"
                    android:background="@drawable/border_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:layout_width="32dp"
                    android:layout_height="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="31dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="13dp"
                    android:background="@drawable/visa_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <View
                    android:layout_width="17dp"
                    android:layout_height="13dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="79dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/mastercard_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="343dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="291dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="31dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/bank_transfer_Text"
                    android:textAppearance="@style/lato_12"
                    android:textColor="#808080"
                    android:lineSpacingExtra="10sp"
                    android:gravity="top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/selectBank"
                    android:layout_width="50dp"
                    android:layout_height="14dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="261dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="9dp"
                    android:text="@string/btnSelect"
                    android:onClick="SELECTBANK"
                    android:textAppearance="@style/nu_exb_12"
                    android:textColor="#FF0000"
                    android:lineSpacingExtra="8sp"
                    android:gravity="top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:layout_width="6dp"
                    android:layout_height="9dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="315dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="13.5dp"
                    android:rotation="180"
                    android:background="@drawable/right_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:layout_width="343dp"
                    android:layout_height="1dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="39dp"
                    android:background="@drawable/border_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:layout_width="33dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="49dp"
                    android:layout_marginStart="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bni_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:layout_width="65dp"
                    android:layout_height="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="82.14dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/cimb_niaga_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="343dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="386dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="31dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/retail_payment_Text"
                    android:textAppearance="@style/lato_12"
                    android:textColor="#808080"
                    android:lineSpacingExtra="10sp"
                    android:gravity="top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/selectRetail"
                    android:onClick="SELECTALFAMART"
                    android:layout_width="50dp"
                    android:layout_height="14dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="261dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="9dp"
                    android:text="@string/btnSelect"
                    android:textAppearance="@style/nu_exb_12"
                    android:textColor="#FF0000"
                    android:lineSpacingExtra="8sp"
                    android:gravity="top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:layout_width="6dp"
                    android:layout_height="9dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="315dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="13.5dp"
                    android:rotation="180"
                    android:background="@drawable/right_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:layout_width="343dp"
                    android:layout_height="1dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="39dp"
                    android:background="@drawable/border_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <View
                    android:layout_width="34dp"
                    android:layout_height="11dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="29dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/alfamart_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>